# Database
DATABASE_URL="postgresql://user:password@localhost:5432/secureauth?schema=public"

# JWT Secrets (Generate with: openssl rand -base64 64)
JWT_ACCESS_SECRET="your-256-bit-access-secret-change-this-in-production"
JWT_REFRESH_SECRET="your-256-bit-refresh-secret-change-this-in-production"

# WebAuthn Configuration
WEBAUTHN_RP_NAME="Secure Auth System"
WEBAUTHN_RP_ID="localhost"
WEBAUTHN_ORIGIN="http://localhost:3000"

# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Session Configuration
SESSION_MAX_AGE_DAYS=30
ACCESS_TOKEN_EXPIRES_MINUTES=5

# Security
BCRYPT_ROUNDS=12
